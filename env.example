# Wiki Loves Birds Dashboard - Environment Configuration
# Copy this file to .env and update with your actual values

# Application
APP_NAME="Wiki Loves Birds India 2024 Dashboard"
APP_ENV=production
APP_DEBUG=false

# API Configuration
API_URL=/api/dashboard.php
API_TIMEOUT=30

# Database Configuration (Local Development)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=commonswiki_p
DB_USERNAME=root
DB_PASSWORD=

# Toolforge Database Configuration
TOOLFORGE_DB_HOST=commonswiki.analytics.db.svc.wikimedia.cloud
TOOLFORGE_DB_PORT=3306
TOOLFORGE_DB_NAME=commonswiki_p
MYSQL_USERNAME=
MYSQL_PASSWORD=

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_PATH=./cache/

# Category Configuration
WIKI_CATEGORY=Images_from_Wiki_Loves_Birds_India_2024_(maintenance-earth)

# Security
CORS_ORIGIN=*
RATE_LIMIT=100

# Logging
LOG_ENABLED=true
LOG_PATH=./logs/
LOG_LEVEL=error